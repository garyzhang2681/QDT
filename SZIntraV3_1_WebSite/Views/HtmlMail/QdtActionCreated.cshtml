@model SZIntraV3_1_WebSite.Models.QdtAction
<!DOCTYPE html>
<html>
<head>
    <title></title>
    <style type="text/css">
        body
        {
            font-family: 'GE Inspira';
            font-size: 16px;
            background-color: #EEE;
            width: 800px;
        }
        
        .content
        {
            width: 800px;
        }
        
        div
        {
            margin-top: 20px;
            margin-bottom: 20px;
            margin-left: auto;
        }
        
        table
        {
            width: 100%;
            background-color: #FFF;
            white-space: normal;
            border-collapse: collapse;
        }
        
        td
        {
            border-width: 1px;
            border-color: Gray;
            border-style: solid;
            padding: 5px 15px 5px 5px;
            display: block;
        }
        
        a
        {
            padding: 0 5px 0 5px;
        }
        
        .content
        {
            margin: 0 auto;
            width: 700px;
        }
        
        .preview
        {
            font-size: 1.2em;
        }
        
        .set-header
        {
            text-align: center;
            font-size: 1.2em;
            font-weight: bolder;
        }
        
        .label
        {
            font-weight: bold;
            width: 150px;
        }
        
        .warning
        {
            color: #BE504F;
        }
    </style>
</head>
<body>
    <div class="content">
        <div>
            <p>
                A new <strong>DR Action</strong> has been created. Please
                review the information below regarding this report.</p>
        </div>
        <div>
            <table>
                <tbody>
                    <tr>
                        <td class="label">
                            DR Number
                        </td>
                        <td>@Model.dr.dr.dr_num
                        </td>
                    </tr>
                    <tr>
                        <td class="label">
                            Disposition Rank
                        </td>
                        <td>@Model.disposition.disposition.disp_rank
                        </td>
                    </tr>
                    <tr>
                        <td class="label">
                            Action Owner
                        </td>
                        <td>
                            @Model.owner.employee.name_en
                        </td>
                    </tr>
                    <tr>
                        <td class="label">
                            Action Type
                        </td>
                        <td>@Model.actionType.qdtComString.en_string
                        </td>
                    </tr>
                    <tr>
                        <td class="label">
                            Short Term Action
                        </td>
                        <td>@Model.action.st_action
                        </td>
                    </tr>
                    <tr>
                        <td class="label">
                            Status
                        </td>
                        <td>@Model.action.status
                        </td>
                    </tr>
                    <tr>
                        <td class="label">
                            Description
                        </td>
                        <td>@Model.action.description
                        </td>
                    </tr>
                    <tr>
                        <td class="label">
                            Due Date
                        </td>
                        <td>@Model.action.due_date.Value.ToString("yyyy-MM-dd HH:mm")
                        </td>
                    </tr>
                    @if (Model.discrepancies.Count > 0)
                    {
                        <tr>
                            <td colspan="2" class="set-header warning">
                                Discrepancies
                            </td>
                        </tr>
                        foreach (var discrepancy in Model.discrepancies)
                        { 
                        <tr>
                            <td class="label">@string.Format("Discrepancy {0}", Model.discrepancies.IndexOf(discrepancy) + 1)
                            </td>
                            <td>@discrepancy.discrepancy.description
                            </td>
                        </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
        <div>
            Please go to<a href='http://3.41.199.73:9000'> Quality Digitalization Tools </a>for
            details.
        </div>
    </div>
</body>
</html>
