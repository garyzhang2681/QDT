@model SZIntraV3_1_WebSite.Models.Tq.VmQdtStcWorkflowRequest
@using SZIntraV3_1_WebSite.Models.Tq
@using SZIntraV3_1_WebSite.Models.System
<!DOCTYPE html>
<html>
<head>
    <title></title>
    <style type="text/css">
        body
        {
            font-family: 'GE Inspira';
            font-size: 16px;
            background-color: #EEE;
            width: 800px;
        }
        
        .content
        {
            width: 800px;
        }
        
        div
        {
            margin-top: 20px;
            margin-bottom: 20px;
            margin-left: auto;
        }
        
        table
        {
            width: 100%;
            background-color: #FFF;
            white-space: normal;
            border-collapse: collapse;
        }
        
        td
        {
            border-width: 1px;
            border-color: Gray;
            border-style: solid;
            padding: 5px 15px 5px 5px;
            display: block;
            width: 300px;
        }
        
        a
        {
            padding: 0 5px 0 5px;
        }
        
        .content
        {
            margin: 0 auto;
            width: 700px;
        }
        
        .preview
        {
            font-size: 1.2em;
        }
        
        .set-header
        {
            text-align: center;
            font-size: 1.2em;
            font-weight: bolder;
        }
        
        .label
        {
            font-weight: bold;
            width: 150px;
        }
        
        .warning
        {
            color: #BE504F;
        }
        
        .detail
        {
            width: 550px;
        }
    </style>
</head>
<body>
    <div class="content">
        <div>
            <p>
                Pay attentation!One <strong>Skill Training</strong> has been canceled!</p>
        </div>
        <div>
            <table>
                <tbody>
                    <tr>
                        <td class="label">
                            Skill Code
                        </td>
                        <td class="detail">@Model.certification.certification_item
                        </td>
                    </tr>
                    <tr>
                        <td class="label">
                            Lesson(s)
                        </td>
                        <td class="detail">
                            @{
                            
                                if (@Model.lessons.Count() > 0)
                                {
                                    for (int i = 0; i < @Model.lessons.Count(); i++)
                                    {
                                        <p> Lesson @i: Model.lessons[@i].subject</p>
                                    }
                                }
                                else
                                {
                                    <p>N/A</p>
                                }
                            }
                        </td>
                    </tr>
                    <tr>
                        <td class="label">
                            Trainee
                        </td>
                        <td class="detail">@VmNativeUser.GetNativeUserByEmployeeId(@Model.workflowRequest.request_for.Value).name_cn
                        </td>
                    </tr>
                    <tr>
                        <td class="label">
                            Create By
                        </td>
                        <td class="detail">@VmNativeUser.GetNativeUserByUserId(@Model.workflowRequest.requestor.Value).name_cn
                        </td>
                    </tr>
                    <tr>
                        <td class="label">
                            Create Date
                        </td>
                        <td class="detail">@Model.workflowRequest.start_time.Value.ToString("yyyy-MM-dd HH:mm")
                        </td>
                    </tr>
                    <tr>
                        <td class="label">
                            Due Date
                        </td>
                        <td class="detail">@Model.workflowRequest.due_date.Value.ToString("yyyy-MM-dd")
                        </td>
                    </tr>
                    <tr>
                        <td class="label">
                            Current Step
                        </td>
                        <td class="detail">@Model.currentProcess.name
                        </td>
                    </tr>
                    <tr>
                        <td class="label">
                            Cancled By  
                        </td>
                        <td class="detail">@VmNativeUser.GetNativeUserByUserId(@Model.currentAction.handler.Value).name_cn
                        </td>
                    </tr>
                    <tr>
                        <td class="label">
                            Remark  
                        </td>
                        <td class="detail">@Model.currentAction.remark
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div>
            Please go to<a href='http://3.41.199.73:9000'> Quality Digitalization Tools </a>
            for details.
        </div>
    </div>
</body>
</html>
